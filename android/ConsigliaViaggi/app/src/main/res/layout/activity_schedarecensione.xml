<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/toolbarrow"
        layout="@layout/toolbar_orange"/>

    <TextView
        android:id="@+id/strutturaname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicbold"
        android:text="STRUTTURA"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:layout_below="@id/toolbarrow"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"/>

    <RatingBar
        android:id="@+id/ratingg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:isIndicator="true"
        android:numStars="5"
        android:theme="@style/Rating_orange"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@id/strutturaname"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/bodyrece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicregular"
        android:text="BODY"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/ratingg"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp" />

</RelativeLayout>