<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppThemeCard"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dip"
    app:cardElevation="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orangecorners">

        <Button
            android:id="@+id/frecciarece"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/frecciarece"
            android:layout_below="@id/ratingrow"
            android:layout_marginBottom="8dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/struttura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sifonnpro"
            android:text="STRUTTURA"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toStartOf="@id/ratingrow"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/titlerow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/centurygothicbold"
            android:text="TITOLO"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/struttura"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/bodyrow"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/centurygothicregular"
            android:text="CORPO"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/frecciarece"
            android:layout_below="@id/titlerow"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <RatingBar
            android:id="@+id/ratingrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:theme="@style/Rating_orange"
            android:clickable="false"
            android:isIndicator="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            style="?android:attr/ratingBarStyleSmall"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>