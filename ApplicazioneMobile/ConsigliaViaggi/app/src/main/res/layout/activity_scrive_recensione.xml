<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/toolbar_orange"
        layout="@layout/toolbar_orange_conferma" />

    <TextView
        android:id="@+id/mostrauser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicbold"
        android:text="MOSTRA USERNAME"
        android:textSize="15sp"
        android:textColor="@color/orange"
        android:layout_below="@id/titletext"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:id="@+id/titletext"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="12sp"
        android:fontFamily="@font/centurygothicregular"
        android:textColor="@color/black"
        android:theme="@style/EditText_orange"
        android:layout_below="@id/title"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Toogle_orange"
        android:layout_below="@id/mostrauser"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicregular"
        android:textSize="10sp"
        android:text="Gli utenti che visualizzano la tua recensione\n
vedranno come nome autore il tuo username\n
altrimenti il tuo nome e cognome."
        android:layout_below="@id/switch2"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/desctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicbold"
        android:text="DESCRIZIONE"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/orange"
        android:layout_below="@id/desc"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fontFamily="@font/centurygothicregular"
        android:textColor="@color/black"
        android:background="@drawable/recensione_text_box"
        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:inputType="textMultiLine"
        android:theme="@style/EditText_orange"
        android:layout_below="@id/desctext"
        android:layout_marginTop="8dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="1.0"
        android:stepSize="1.0"
        android:theme="@style/Rating_orange"
        android:layout_below="@id/textView4"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicbold"
        android:text="TITOLO"
        android:textSize="15sp"
        android:textColor="@color/orange"
        android:layout_below="@id/ratingBar"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothicbold"
        android:text="VALUTAZIONE"
        android:textSize="15sp"
        android:textColor="@color/orange"
        android:layout_marginTop="30dp"
        android:layout_below="@id/toolbar_orange"
        android:layout_marginStart="5dp"/>

</RelativeLayout>